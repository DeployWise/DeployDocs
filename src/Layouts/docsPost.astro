---
import NavBarComponent from '@astro-docs/components/NavbarComponent';
import MySideBar from "@astro-docs/components/Sidebar/index.astro"
import '../styles/global.css';

import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'docs'>['data'];

const { title, description } = Astro.props;
---

<html>
    <body class="bg-zinc-900">
        <NavBarComponent/>
        <section class="flex w-full">
            <MySideBar/>
            <section class="p-4 text-white w-4/5 md:w-full sm:w-full">
                <h1 class="font-bold text-2xl">{title}</h1>
                <h2 class="font-semibold text-xl">{description}</h2>
                <article>
                    <slot/>
                </article>
            </section>
        </section>
    </body>
</html>


